@{
    ViewBag.Title = "Juego";
}

<div class="game-container">

    <h2>Juego de Atrapar</h2>

    <div class="info-box">
        <div class="info-item">
            Puntaje: <span id="score" aria-live="polite">0</span>
        </div>

        <div class="info-item">
            Tiempo: <span id="time">30</span>s
        </div>
    </div>

    <div id="gameArea">
        <div id="target" tabindex="0"></div>
    </div>

    <button id="pauseBtn">Pausar</button>

    <div id="message" aria-live="polite" class="sr-only"></div>
</div>
